package com.acropolis.location.module.controller;

import android.content.Context;
import android.content.Intent;
import android.telephony.PhoneStateListener;
import android.telephony.TelephonyManager;

import com.acropolis.location.module.MainActivity;

public class ContolSwitches 
{

	static Context appContext=null;
	static Intent appIntent=null;
	static TelephonyManager teleManager=null;
	static RoamingListener roamingListener=null;
	{
		appContext = MainActivity.getAppContext();
		appIntent = MainActivity.getAppIntent();
		teleManager = (TelephonyManager) 
				appContext.getSystemService(Context.TELEPHONY_SERVICE);
		roamingListener = new RoamingListener();
	}
	
	
	public static boolean switchON()
	{
		teleManager.listen(roamingListener, 
				PhoneStateListener.LISTEN_SERVICE_STATE);
		return true;
	}
	
	
	public static boolean switchOFF()
	{	
		teleManager.listen(roamingListener,
				PhoneStateListener.LISTEN_NONE);
		return false;
	}
	
	
	
}
