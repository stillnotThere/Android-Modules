package com.tester;

import android.content.Context;
import android.content.SharedPreferences;

/**
 * @author CPH-iMac
 *
 */
public class SharedPrefs 
{
	private static Context _context = null;
	private static final String name = "test_sp";
	
	private static final String defValue = "0";
	
	public SharedPrefs(Context context)
	{
		_context = context;
	}
	
	private static SharedPreferences getSharedPrefs()
	{
		return _context.getSharedPreferences(name, Context.MODE_PRIVATE|Context.MODE_MULTI_PROCESS);
	}
	
	public static String getData(String key)
	{
		String val = "";
		SharedPreferences sp = getSharedPrefs();
		val = sp.getString(key, defValue);
		return val;
	}
	
	public static void setData(String key,String data)
	{
		SharedPreferences sp = getSharedPrefs();
		
		
	}
	
}
