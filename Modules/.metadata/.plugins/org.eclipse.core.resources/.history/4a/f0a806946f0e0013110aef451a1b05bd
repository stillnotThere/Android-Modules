package com.acropolis.radio.module.global;

import android.database.sqlite.SQLiteDatabase;
import android.os.Environment;

/**
 * @author CPH-iMac
 *
 */
public public final class DBConstants 
{

	public final static String dbName = "RadioModuleDatabase";
	public final static String tableName = "MonitoredRadioCollector";
	public final static String dbPath = 
			Environment.getDataDirectory( )+
			"/data/databases/"+dbName;
	
	
	/*SQLiteDatabase args*/
	/*	@see android.database.sqlite.SQLiteDatabase.*	*/
	public final static SQLiteDatabase.CursorFactory cursorFactory = null;
	public final static int dbVersion = 1;
	
	
	/*SQLite Transact queries*/
	public final static String CREATETABLE =
			"CREATE TABLE " + tableName +
			"{ _id INTEGER AUTOINCREMENT," +
			"timestamp TEXT NOT NULL," +
			"phonenumber TEXT NOT NULL," +
			"roaming TEXT NOT NULL," +
			"incomingcall TEXT NOT NULL," +
			"outgoingcall TEXT NOT NULL," +
			"receivedmsg TEXT NOT NULL," +
			"sentmsg TEXT NOT NULL," +
			"downloaded TEXT NOT NULL," +
			"uploaded TEXT NOT NULL }";
	public final static String DROPTABLE = "";
	
	
	/*COLUMN INDEXES*/
	public final int ID = 1;
	public final int TIMESTAMP = 2;
	public final int PHONENUMBER = 3;
	public final int ROAMING = 4;
	public final int INCOMINGCALL = 5;
	public final int OUTGOINGCALL = 6;
	public final int RECEIVEDMSG = 7;
	public final int SENTMSG = 8;
	public final int DOWNLOADED = 9;
	public final int UPLOADED = 10;

}